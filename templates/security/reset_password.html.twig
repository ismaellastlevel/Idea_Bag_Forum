{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="colo-md-6 mx-auto">
            {% include 'partials/flash/msg_flash.html.twig' %}
            <h3 class="font-weight-bold text-uppercase">{% trans %}Reset password{% endtrans %}</h3>
            <br>
            <form method="post" class="form-type-combine" id="formBtnDisable">
                <div class="form-group">
                    <label for="inputPassword">{% trans %}New password{% endtrans %}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="inputPassword">{% trans %}Confirm your new password{% endtrans %}</label>
                    <input type="password" name="confirmPassword" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="token" value="{{ token }}">
                <button class="btn btn-bold btn-primary btn-block" type="submit">{% trans %}Validate password{% endtrans %}</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block title %}
    {% trans %}Reset password{% endtrans %}
{% endblock %}

